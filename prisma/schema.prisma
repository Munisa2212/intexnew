generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String

}

model WebSite {
  id             Int    @id @default(autoincrement())
  phone          String
  address        String
  time           String
  telegram_link  String
  instagram_link String
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())

  Category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  price Int
  size  Int
  shape String
  status String
  count Int
  discountPrice Int
  image String

  order         Order?
}

model Order{
  id Int @id @default(autoincrement())

  userName String
  userPhone String
  userAddress String

  productId     Int     @unique
  product       Product @relation(fields: [productId], references: [id])
}